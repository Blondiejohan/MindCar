<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    
    <corners
        android:radius="15dp"
        />
    <gradient
        android:angle="0"
        android:centerX="50%"
        android:centerColor="#39c2c9"
        android:startColor="#21a9a9"
        android:endColor="#3ec1c1"
        android:type="linear"
        android:width="500dp"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="50dp"
        android:height="60dp"
        />
    <stroke
        android:width="3dp"
        android:color="#7ec2c2"
        />
</shape>