<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blue_brain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="package mindcar.testing.Login2"
    tools:showIn="@layout/activity_start">

    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ET_PASSWORD"
        android:contentDescription="Input password"
        android:elegantTextHeight="false"
        android:background="#fdfcfc"
        android:textColor="#f7000000"
        android:textIsSelectable="false"
        android:textSize="12dp"
        android:gravity="fill"
        android:visibility="visible"
        android:password="false"
        android:editable="true"
        android:layout_below="@+id/ET_USER_NAME"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ET_USER_NAME"
        android:contentDescription="Input username"
        android:elegantTextHeight="false"
        android:inputType="text"
        android:background="#fdfcfc"
        android:textColor="#f7000000"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:textSize="12dp"
        android:gravity="fill"
        android:visibility="visible"
        android:editable="true"
        android:layout_alignLeft="@+id/ET_PASSWORD"
        android:layout_alignStart="@+id/ET_PASSWORD"
        android:layout_marginTop="80dp"
        android:hint="Username"
        />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="LOGIN"
        android:id="@+id/bLogin"
        android:background="#fe1a4b79"
        android:clickable="true"
        android:layout_below="@+id/ET_PASSWORD"
        android:layout_alignLeft="@+id/ET_PASSWORD"
        android:layout_alignStart="@+id/ET_PASSWORD"
        android:layout_marginTop="40dp"
        android:textColor="#fefefe"
        android:textSize="10dp"
        android:textStyle="normal" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="SIGN UP"
        android:id="@+id/bSIGNUP"
        android:background="#fe1a4b79"
        android:textStyle="normal"
        android:layout_alignTop="@+id/bLogin"
        android:layout_alignRight="@+id/ET_PASSWORD"
        android:layout_alignEnd="@+id/ET_PASSWORD"
        android:textColor="#fefdfd"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Login as Developer"
        android:id="@+id/devView"
        android:layout_below="@id/bSIGNUP"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textSize="10dp"
        android:textColor="#fefdfd"
        android:clickable="false"
        android:layout_marginTop="250dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/userSettings"
        android:layout_below="@+id/bLogin"
        android:layout_alignRight="@+id/devView"
        android:layout_alignEnd="@+id/devView"
        android:layout_marginTop="65dp" />


</RelativeLayout>
