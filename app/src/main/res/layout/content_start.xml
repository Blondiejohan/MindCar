<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="package mindcar.testing.Login2"
    tools:showIn="@layout/activity_start">
    <ImageView
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/intro"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ET_PASSWORD"
        android:backgroundTint="@android:color/holo_blue_light"
        android:inputType="textPassword"
        android:editable="true"
        android:layout_below="@+id/ET_USER_NAME"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Password"
        style="@style/EditText"
       />

    <EditText
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ET_USER_NAME"
        android:backgroundTint="@android:color/holo_blue_light"
        style="@style/EditText"
        android:editable="true"
        android:layout_alignLeft="@+id/ET_PASSWORD"
        android:layout_alignStart="@+id/ET_PASSWORD"
        android:layout_marginTop="80dp"
        android:hint="Username"
        android:contentDescription="Input username"
        android:inputType="textPersonName"
        />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="LOGIN"
        android:id="@+id/bLogin"
        android:clickable="true"
        style="@style/button"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ET_PASSWORD"
        android:layout_alignStart="@+id/ET_PASSWORD" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="SIGN UP"
        android:id="@+id/bSIGNUP"
        android:textStyle="normal"
        android:layout_alignTop="@+id/bLogin"
        android:layout_alignRight="@+id/ET_PASSWORD"
        android:layout_alignEnd="@+id/ET_PASSWORD"
        style="@style/button"/>


</RelativeLayout>
