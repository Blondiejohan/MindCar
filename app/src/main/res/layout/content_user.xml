<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.UserActivity"
    tools:showIn="@layout/activity_user">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:visibility="visible"
        android:textSize="35sp"
        android:text= ""
        android:layout_gravity=""
        android:phoneNumber="false"
        android:linksClickable="false"
        android:clickable="false"
        android:editable="false"
        android:layout_toLeftOf="@+id/profile_image_view" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile_image_view"
        android:src="@drawable/profile_image"
        android:layout_alignTop="@+id/username"
        android:layout_alignRight="@+id/attentionBar"
        android:layout_alignEnd="@+id/attentionBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpeedText"
        android:visibility="visible"
        android:text="Speed:"
        android:layout_alignTop="@+id/profile_image_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="160dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carbatterytext"
        android:text="Car Battery: "
        android:layout_below="@+id/SpeedText"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Attention"
        android:id="@+id/attention"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="230dp"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attentionBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/attention"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <ToggleButton
        style="@style/button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:clickable="false"
        android:textOff="Start"
        android:textOn="Pause"
        android:visibility="visible"
        android:textSize="20dp"
        android:text="start_pause_toggle_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/attentionBar"
        android:layout_marginTop="40dp" />

    <Button
        style="@style/button"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Log Out"
        android:id="@+id/logout"
        android:visibility="visible"
        android:clickable="true"
        android:onClick="logout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />






</RelativeLayout>